			<id>snapshots</id>
			<name>snapshots</name>
			<url>http://dlde.at.bitunion.org:11005/nexus/content/repositories/snapshots</url>
		</repository>
		<repository>
			<id>thirdparty</id>
			<name>thirdparty</name>
			<url>http://dlde.at.bitunion.org:11005/nexus/content/repositories/thirdparty</url>
		</repository>
		<repository>
			<id>central</id>
			<name>central</name>
			<url>http://dlde.at.bitunion.org:11005/nexus/content/repositories/central/</url>
		</repository>
	</repositories>
</project>